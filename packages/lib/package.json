  "dependencies": {
    "@codemirror/lint": "^6.8.4",
    "@codemirror/language": "^6.10.8",
    "@codemirror/state": "^6.5.0",
    "@codemirror/view": "^6.36.2",
    "@lezer/common": "^1.2.3"
