{
  "name": "@leiden-js/transformation-service",
  "version": "1.0.0",
  "description": "JSON API service for transforming Leiden Plus and Leiden Translation to XML and vice-versa",
  "main": "./dist/index.cjs",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "leiden-transformation-service": "./bin/leiden-transformation-service.js"
  },
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap",
    "dev": "tsx watch src/index.ts",
    "start": "node ./bin/leiden-transformation-service.js",
    "test": "TS_NODE_PROJECT=../../tsconfig.test.json mocha src/**/*.test.ts",
    "prepublishOnly": "npm run build"
  },
  "author": "Leiden+ Project",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/chai-xml": "^0.3.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "chai": "^5.2.0",
    "chai-xml": "^0.4.1",
    "mocha": "^11.2.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@leiden-js/common": "workspace:*",
    "@leiden-js/linter-leiden-plus": "workspace:*",
    "@leiden-js/linter-leiden-trans": "workspace:*",
    "@leiden-js/parser-leiden-plus": "workspace:*",
    "@leiden-js/parser-leiden-trans": "workspace:*",
    "@leiden-js/transformer-leiden-plus": "workspace:*",
    "@leiden-js/transformer-leiden-trans": "workspace:*",
    "@lezer/common": "^1.2.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "slimdom": "^4.3.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.24.4"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}